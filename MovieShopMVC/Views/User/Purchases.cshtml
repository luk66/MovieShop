@model ApplicationCore.Models.PurchaseResponseModel

@{
    ViewData["Title"] = "Purchases";
}

<h1>Purchases</h1>

<div>
    <h4>PurchaseResponseModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 mr-5">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class = "col-sm-2 mr-5">
            @Html.DisplayNameFor(model => model.TotalMoviesPurchased)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalMoviesPurchased)
        </dd>
        <div class="row">
            @foreach (var movieCard in Model.PurchasedMovies)
            {
            <div class="col-xl-2 col-sm-4 col-lg-3 col-6">
                <button type="button" class="btn btn-secondary mt-0" data-toggle="modal" data-target="#exampleModal" style="width: inherit">
                    Purchase details
                </button>
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Purchase Details @movieCard.Title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-3">
                                        <img src="@movieCard.PosterUrl" class="img-fluid" alt="@movieCard.Title" />
                                    </div>
                                    <div class="col">

                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">
                                                <i class="far fa-calendar-alt mr-2"></i>Purchased Date
                                                <span class="badge badge-pill badge-dark">TODO</span>
                                            </li>


                                            <li class="list-group-item">
                                                <i class="far fa-money-bill-alt"></i> Price
                                                <span class="badge badge-pill badge-pill badge-dark">
                                                    TODO
                                                </span>
                                            </li>

                                            <li class="list-group-item">
                                                <i class="fas fa-check-circle"></i> Purchase Number
                                                <span class="badge badge-pill badge-dark">
                                                    TODO
                                                </span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("_MovieCard", movieCard)
                @movieCard.Id;

            </div>

            }
        </div>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
